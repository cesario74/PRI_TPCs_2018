extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-header.w3-light-grey
                h3 MyAppTPC8
            .w3-container
                form.w3-container(id="uploader")
                    fieldset
                    legend Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file',name='ficheiro',id='ficheiro')
                    legend Descrição
                    textarea.w3-input.w3-border.w3-light-grey(id='descricao', rows='3', cols='80')
                    br
                    button.w3-button.w3-round-large.w3-black(id='submeter') Submeter
                .w3-container
                    br
                    table.w3-table-all(id='ficheiros')
                    br
            footer.w3-container.w3-dark-grey
                address Gerado por myAppTPC8