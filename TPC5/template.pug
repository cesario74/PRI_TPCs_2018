extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h4= musica.titulo
            .w3-container
                table.w3-table.w3-all
                    tr
                        th Título
                        td= musica.titulo
                    tr
                        if musica.subtitulo
                            th Subtítulo
                            td= musica.subtitulo
                    tr
                        th Tipo
                        td= musica.tipo
                    tr
                        th Compositor 
                        td= musica.compositor
                    tr
                        if musica.arranjo
                            th Arranjo
                            td= musica.arranjo
                    tr 
                        th Instrumentos   
                        td
                            ul.w3-ul 
                                each i in musica.instrumentos
                                    li 
                                        table.w3-table.w3-all
                                            tr
                                                th Nome
                                                td= i.nome
                                            tr
                                                th Partitura
                                                td= i.partitura.path
                                            tr
                                                if i.voz
                                                    th Voz 
                                                    td= i.voz
                                            tr
                                                if i.clave
                                                    th Clave
                                                    td= i.clave
            footer.w3-container.w3-light-grey
                p
                    a(href='http://localhost:5000/index')
                        | Voltar à Página Principal
